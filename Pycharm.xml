<!-- Put this in ~/.config/JetBrains/PyCharmCE/keymaps -->
<!-- Ctrl-R Ctrl-R runs Python file in REPL -->
<!-- Ctrl-; in editor jumps to Python REPL -->
<!-- Tab in REPL allows input into REPL -->
<!-- Esc in REPL jumps back to editor -->
<!-- Ctrl-C Ctrl-C in REPL reruns Python file in REPL -->
<!-- Ctrl-Alt-X in editor executes selection in REPL -->
<keymap version="1" name="Pycharm" parent="Default for XWin">
  <action id="ActivatePythonConsoleToolWindow">
    <keyboard-shortcut first-keystroke="ctrl semicolon" />
  </action>
  <action id="ExecuteInPyConsoleAction">
    <keyboard-shortcut first-keystroke="shift alt e" />
    <keyboard-shortcut first-keystroke="ctrl alt x" />
  </action>
  <action id="Rerun">
    <keyboard-shortcut first-keystroke="ctrl f5" />
    <keyboard-shortcut first-keystroke="ctrl c" second-keystroke="ctrl c" />
  </action>
  <action id="Run Mypy Daemon">
    <keyboard-shortcut first-keystroke="shift ctrl m" />
    <keyboard-shortcut first-keystroke="shift ctrl alt m" />
  </action>
  <action id="RunClass">
    <keyboard-shortcut first-keystroke="shift ctrl f10" />
    <keyboard-shortcut first-keystroke="ctrl r" second-keystroke="ctrl r" />
  </action>
</keymap>
